{
  "name": "daffofils-fullstack",
  "version": "1.0.0",
  "description": "Full-stack flower shop application",
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "dev-mongo": "concurrently \"npm run backend:dev-mongo\" \"npm run frontend:dev\"",
    "backend:dev": "cd backend && npm run dev",
    "backend:dev-mongo": "cd backend && npm run dev-mongo",
    "frontend:dev": "cd frontend && npm run dev",
    "backend:start": "cd backend && npm start",
    "frontend:build": "cd frontend && npm run build",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "setup": "npm run install:all"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": ["fullstack", "ecommerce", "flowers", "react", "nodejs"],
  "author": "Daffofils Team",
  "license": "MIT"
}
